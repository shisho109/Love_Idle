<div class="eventpage">
  <div class="title2">
    <h1>イベント投稿ページ</h1>
  </div>
  <%= form_for @event do |f| %>

    <div class="field">
      <%= f.label :イベント名 %>
      <%= f.text_field :title, :size => 30 %>
    </div>

    <div class="field">
      <%= f.label :コメント  %>
      <%= f.text_area :idea, :size => "170x20" %>
    </div>

    <div class="submitarea">
    <%= f.submit "イベントを紹介する" %>
    </div>
  <% end %>

  <div class="toop">
  <%= link_to "イベント一覧に戻る", events_path %>
  </div>
</div>